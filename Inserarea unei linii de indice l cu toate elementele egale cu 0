#include <stdio.h>
#include <stdlib.h>

int main()
{
    int c,y=0,x,col,rand,i,j,A[50][50];
    printf("Randuri= ");
    scanf("%d", &rand);
    printf("Coloane= ");
    scanf("%d", &col);
    printf("Linia care apare= ");
    scanf("%d", &x);

    for(i = 1; i <= rand; i++)
    {
        for(j = 1; j <= col; j++)
        {
            printf("A[%d][%d]=", i,j);
            scanf("%d", &A[i][j]);
        }
    }
    for(i = 1; i <=rand; i++)
    {
        for(j = 1; j <=col; j++)
        {
            if(x==i)
                    for(c=0; c<col; c++){
                        printf("%3d",y);
                        x++;}
            printf("%3d", A[i][j]);
        }
    }
    return 0;
}
